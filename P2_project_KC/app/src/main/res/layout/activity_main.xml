<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/roll_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Roll"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/num_side_box"
        app:layout_constraintTop_toTopOf="@+id/num_side_box" />

    <EditText
        android:id="@+id/num_side_box"
        android:layout_width="138dp"
        android:layout_height="56dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="6"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num_dice_box"
        android:layout_width="138dp"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="4"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Number of Sides"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/num_side_box"
        app:layout_constraintStart_toStartOf="@+id/num_side_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Number of Dice"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/num_side_box"
        app:layout_constraintTop_toBottomOf="@+id/num_side_box" />

    <TextView
        android:id="@+id/output_text"
        android:layout_width="329dp"
        android:layout_height="225dp"
        android:layout_marginTop="48dp"
        android:text="test"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_dice_box" />

</androidx.constraintlayout.widget.ConstraintLayout>