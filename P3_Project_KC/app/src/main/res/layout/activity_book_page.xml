<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookPageActivity">

    <TextView
        android:id="@+id/author_tv"
        android:layout_width="379dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:text="Author"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_tv" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="379dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/author_tv"
        app:layout_constraintStart_toStartOf="@+id/author_tv"
        app:layout_constraintTop_toBottomOf="@+id/author_tv" />

    <TextView
        android:id="@+id/genre_tv"
        android:layout_width="379dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:text="Genre"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/name_tv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <TextView
        android:id="@+id/info_tv"
        android:layout_width="379dp"
        android:layout_height="68dp"
        android:layout_marginTop="56dp"
        android:text="Book Info"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/name_tv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="147dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:text="Back"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/genre_tv"
        app:layout_constraintStart_toStartOf="@+id/genre_tv"
        app:layout_constraintTop_toBottomOf="@+id/genre_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>